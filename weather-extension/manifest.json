{
  "manifest_version": 3,
  "name": "Weather Widget Extension",
  "version": "1.0.0",
  "description": "Her sekmede hava durumu widget'ını görüntüleyin - Türkiye odaklı hava durumu uygulaması",
  
  "permissions": [
    "storage",
    "geolocation",
    "activeTab",
    "tabs",
    "background",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://api.openweathermap.org/*",
    "https://maps.googleapis.com/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["widget.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Weather Widget Ayarları"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["widget.css", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
